/*
 *  Fuentes
 */
@font-face
    font-family 'pinyon'
    src url('../../../Public/font/pinyon.woff') format('woff')
    font-weight 100

@font-face
    font-family 'roboto100'
    src url('../../../Public/font/roboto100.woff') format('woff')
    font-weight 100


@font-face
    font-family 'roboto300'
    src url('../../../Public/font/roboto300.woff') format('woff')
    font-weight 300

@font-face
    font-family 'fontello'
    src url('../../Template/font/fontello/fontello.eot?77536103');
    src url('../../Template/font/fontello/fontello.eot?77536103#iefix') format('embedded-opentype'),
    url('../../Template/font/fontello/fontello.woff?77536103') format('woff'),
    url('../../Template/font/fontello/fontello.ttf?77536103') format('truetype'),
    url('../../Template/font/fontello/fontello.svg?77536103#fontello') format('svg')
    font-weight normal
    font-style normal

/*
 *
 */
html
body
    font-family 'roboto100'
    background-color #fff
    color #222

/*
 * language selector
 */
.lang_content
    position absolute
    background-color transparent
    top 5px
    left 5px


    .language
        background-color inherit

        #switch_lang
            padding 5px !important

            .icon-globe
                font-size 1.5rem

        a
            font-family 'roboto300'

            &:hover
                color #000

/*!
 *  Fontello
 */
[class^="icon-"]:before
[class*=" icon-"]:before
    font-family "fontello"
    font-style normal
    font-weight normal
    speak none
    display inline-block
    text-decoration inherit
    width 1em
    margin-right .2em
    text-align center
    font-variant normal
    text-transform none
    line-height 1em
    margin-left 0.2em

.icon-mail:before {  content: '\e801';  }/* '' */
.icon-globe:before{  content: '\e803';  }/* '' */
.icon-github:before{  content: '\e800'; } /* '' */
.icon-twitter:before{  content: '\e804'; } /* '' */
.icon-database:before{  content: '\e806'; }/* '' */
.icon-download:before{  content: '\e802';  }/* '' */
.icon-linkedin:before{  content: '\e807';  }/* '' */

/*!
 *  Slider css
 */
ul.bjqs{position:relative; list-style:none;padding:0;margin:0;overflow:hidden; display:none;}
li.bjqs-slide{position:absolute; display:none;}
ul.bjqs-controls{list-style:none;margin:0;padding:0;z-index:9999;}
ul.bjqs-controls.v-centered li a{position:absolute;}
ul.bjqs-controls.v-centered li.bjqs-next a{right:0;}
ul.bjqs-controls.v-centered li.bjqs-prev a{left:0;}
ol.bjqs-markers{list-style: none; padding: 0; margin: 0; width:100%;}
ol.bjqs-markers.h-centered{text-align: center;}
ol.bjqs-markers li{display:inline;}
ol.bjqs-markers li a{display:inline-block;}
p.bjqs-caption{display:block;width:96%;margin:0;padding:2%;position:absolute;bottom:0;}
