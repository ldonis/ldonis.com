// Configuracion de columnas del grid
$lesli-grid-columns-count = 12

// * Configuracion de columnas automaticas
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$lesli-grid-columns-automatic-prefix = 'columns'    // Prefijo para clase css
$lesli-grid-columns-automatic-margin = 1             // Margen entre celdas


// * Configuracion de columnas automaticas
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$lesli-grid-columns-manual-prefix = 'column'    // Prefijo para clase css
$lesli-grid-columns-manual-margin = 1            // Margen entre celdas
