
// system icons
@font-face {
  font-family: 'gonzocons';
  src: url('https://cdn.lesli.tech/assets/fonts/icons/gonzocons/gonzocons.eot');
  src: url('https://cdn.lesli.tech/assets/fonts/icons/gonzocons/gonzocons.eot#iefix') format('embedded-opentype'),
       url('https://cdn.lesli.tech/assets/fonts/icons/gonzocons/gonzocons.woff') format('woff'),
       url('https://cdn.lesli.tech/assets/fonts/icons/gonzocons/gonzocons.ttf') format('truetype'),
       url('https://cdn.lesli.tech/assets/fonts/icons/gonzocons/gonzocons.svg#gonzocons') format('svg');
  font-weight: normal;
  font-style: normal;
}


// * Gonzocons icons
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
[class^="g-icon-"]{
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'gonzocons' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.g-icon-github:before {
  content: "\e926";
}

.g-icon-twitter:before {
  content: "\e95a";
}
