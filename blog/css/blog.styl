@font-face
    font-family 'pinyon'
    src url('../../../Public/font/pinyon.woff') format('woff')
    font-weight 100

@font-face
    font-family 'roboto300'
    src url('../../../Public/font/roboto300.woff') format('woff')
    font-weight 300

@font-face {
  font-family: 'fontello';
  src: url('../font/fontello/fontello.eot?59030803');
  src: url('../font/fontello/fontello.eot?59030803#iefix') format('embedded-opentype'),
       url('../font/fontello/fontello.woff2?59030803') format('woff2'),
       url('../font/fontello/fontello.woff?59030803') format('woff'),
       url('../font/fontello/fontello.ttf?59030803') format('truetype'),
       url('../font/fontello/fontello.svg?59030803#fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}

body
    font-size 1.2rem
    font-family roboto300

header
    background-color #F7F7F7
    text-align center
    color #333333

    h1
        font-family 'pinyon'
        font-size 3.2rem
        padding 10px 0px 0px

    p
        background-color #333333
        padding 25px 0px
        font-size 1.4rem
        color #F7F7F7


section
    background-color #FFF
    padding 75px 0px

    article
        width 100%
        max-width 800px
        padding 30px 30px
        margin 0 auto

        &.blog-home
            background-color #F7F7F7

        .post-header
            text-align center
            font-size 1.8rem

        .post-content
            text-align justify

            h3
                font-size 1.6rem

            p
                display block
                margin 15px auto


        .post-footer
            padding 20px 0px

            a
                border-bottom 1px solid transparent
                border-top 1px solid transparent
                color #4a96ad
                transition all linear .2s

                &:hover
                    border-color #DDD

            p
                font-size 0.9rem
                float right
                color #666

section.post-profile
    padding 0px
    background-color #F7F7F7

    ul
        max-width 800px
        width 100%
        margin 0 auto
        text-align right
        padding 25px 0px

        li
            font-size 1.2rem

            a
                padding 0px

    hr
        border 0
        height 1px
        margin 0
        background-image linear-gradient(to right, rgba(0,0,0,0.1), rgba(0,0,0,0.3), rgba(0,0,0,0.1))

    article
        padding 50px 0px
        color #5C5C5C
        text-align center

        img
            display block
            margin 0 auto
            width 125px
            border-radius 50%

        .presentation
            border-top 1px solid #F7F7F7
            border-bottom 1px solid #F7F7F7
            font-size 1.1rem

            h2
                width 320px
                margin 25px auto
                font-size inherit
                display inline-block
                border-bottom 1px solid #ccc
            p
                color #999
                text-align center

section.post-comments
    width 100%
    max-width 800px
    margin 0 auto

footer
    background-color #F7F7F7
    padding 5px 0px

    div
        width 100%
        max-width 800px
        padding 5px 0px
        margin 0 auto

        h3
            font-size 1.4rem

        ul
            text-align right

            a
                padding 0 !important
                font-size 1.3rem

i.icon-twitter
    color #1DA1F2

i.icon-facebook
    color #3B5998


/*
 *  Fontello
 */
[class^="icon-"]:before
[class*=" icon-"]:before
    font-family "fontello"
    font-style normal
    font-weight normal
    speak none
    display inline-block
    text-decoration inherit
    width 1em
    margin-right .2em
    text-align center
    font-variant normal
    text-transform none
    line-height 1em
    margin-left .2em


.icon-heart:before { content: '\e800'; } /* '' */
.icon-github:before { content: '\e801'; } /* '' */
.icon-twitter:before { content: '\e802'; } /* '' */
.icon-arrow-right:before { content: '\e803'; } /* '' */
.icon-arrow-left:before { content: '\e804'; } /* '' */
.icon-facebook:before { content: '\e805'; } /* '' */
