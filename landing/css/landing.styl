@require '../../Template/css/variables.styl'

section

    &.full
        height 100vh

    article

        div
            width 100%

            hr
                background gray-dark
                height 1px
                margin 0 auto

            .rgrid
                text-align center

                & > div
                    vertical-align middle

        ul
            text-align center
            position absolute
            padding 50px 0

            li

                a
                    font-size 1.6 rem
                    transition()

                    &:hover
                        color white
                        text-shadow 0px 0px 2px gray-dark


#portal

    article

        hr
            width 80%

        #foto
            display block
            width 150px
            height 150px
            margin 0 auto
            border-radius 50%
            background-image url('../img/ldonis.jpg')
            background-size cover
            border 3px solid gray-dark

#about
    background-color gray-soft


/*
 *  MediaQueries
 */
@media screen and (max-width  480px)

    section

        article

            div

                .rgrid div
                    min-width 320px

                    &:first-child
                    &:last-child
                        display none
