    background-color #f1f1f1

    article
        background-image url('../img/dev_desk.png')
        background-size 500px
        background-repeat no-repeat
        background-position center right
        padding 150px 3%
        width 100%

        h2
        p
            display block
            width 100%
            max-width 600px
            background transparent

        /* Titulos de contenedores
         * ================================== */
        h2
            text-align center

        p
            text-align justify
